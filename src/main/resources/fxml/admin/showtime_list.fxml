<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           stylesheets="@/styles/styles.css"
           fx:controller="com.github.jimtrung.theater.view.ShowtimeListController"
           prefWidth="840" maxWidth="840"
           prefHeight="700" maxHeight="700">

  <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

  <top>
    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 0 0 20 0;">
      <Button fx:id="closeBtn" text="Đóng" styleClass="button-secondary" onAction="#handleCloseButton"/>
    </HBox>
  </top>

  <center>
    <TableView fx:id="showtimeTable">
      <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
      <columns>
        <TableColumn fx:id="movieColumn" text="Tên phim"/>
        <TableColumn fx:id="auditoriumColumn" text="Tên phòng"/>
        <TableColumn fx:id="startColumn" text="Giờ bắt đầu"/>
        <TableColumn fx:id="finishColumn" text="Giờ kết thúc"/>
        <TableColumn fx:id="dateColumn" text="Ngày chiếu"/>
        <TableColumn fx:id="quantityColumn" text="Số lượng vé"/>
        <TableColumn fx:id="revenueColumn" text="Doanh thu"/>
      </columns>
    </TableView>
  </center>

  <bottom>
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
      <Button text="Xóa Tất Cả" styleClass="button-danger" onAction="#handleDeleteAllButton"/>
      <Button text="Thêm Lịch Chiếu" styleClass="button-primary" onAction="#handleAddShowtimeButton"/>
    </HBox>
  </bottom>

</BorderPane>
