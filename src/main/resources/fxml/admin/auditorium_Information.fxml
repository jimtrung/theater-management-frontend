<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>

<ScrollPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.jimtrung.theater.view.AuditoriumInformationController"
            stylesheets="@/styles/styles.css"
            fitToWidth="true">

  <VBox alignment="CENTER" spacing="20">
    <Label text="Thông tin phòng chiếu"/>

    <VBox prefWidth="500" spacing="20">

      <VBox spacing="6">
        <Label text="Tên phòng chiếu"/>
        <TextField fx:id="AuditoriumNameField"/>
      </VBox>

      <VBox spacing="6">
        <Label text="Loại phòng chiếu"/>
        <TextField fx:id="AuditoriumTypeField"/>
      </VBox>

      <VBox spacing="6">
        <Label text="Sức chứa"/>
        <TextField fx:id="AuditoriumCapacityField"/>
      </VBox>

      <VBox spacing="6">
        <Label text="Ghi chú"/>
        <TextArea fx:id="AuditoriumNoteField" wrapText="true" prefHeight="100"/>
      </VBox>

      <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button text="Quay lại" onAction="#handleBackButton"/>
        <Button text="Sửa" onAction="#handleEditButton"/>
        <Button text="Xóa" onAction="#handleDeleteButton"/>
      </HBox>

    </VBox>
  </VBox>
</ScrollPane>
