<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane fx:controller="com.github.jimtrung.theater.view.ShowtimeInformationController"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="1200" prefHeight="800"
            stylesheets="@/styles/styles.css">

  <center>
    <ScrollPane fitToWidth="true">
      <VBox alignment="CENTER" spacing="40">
        <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>

        <Label text="Thông Tin Lịch Chiếu" styleClass="title"/>

        <HBox spacing="40" alignment="CENTER">
          <!-- Selection Column -->
          <VBox spacing="30" maxWidth="500" HBox.hgrow="ALWAYS">
            <VBox spacing="10" styleClass="card">
              <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
              <Label text="1. Chọn Phim" styleClass="heading"/>
              <TextField fx:id="searchMovieField" promptText="Tìm kiếm phim..."/>
              <ListView fx:id="movieListView" prefHeight="200"/>
            </VBox>

            <VBox spacing="10" styleClass="card">
              <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
              <Label text="2. Chọn Phòng Chiếu" styleClass="heading"/>
              <TextField fx:id="searchAuditoriumField" promptText="Tìm kiếm phòng..."/>
              <ListView fx:id="auditoriumListView" prefHeight="200"/>
            </VBox>
          </VBox>

          <!-- Configuration Column -->
          <VBox spacing="30" maxWidth="400" HBox.hgrow="ALWAYS">
            <VBox spacing="20" styleClass="card">
              <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>
              <Label text="3. Thiết Lập Thời Gian" styleClass="heading"/>
              
              <VBox spacing="10">
                <Label text="Ngày chiếu" styleClass="form-label"/>
                <DatePicker fx:id="showtimeDatePicker" prefWidth="340"/>
              </VBox>

              <HBox spacing="20">
                <VBox spacing="10">
                  <Label text="Giờ bắt đầu" styleClass="form-label"/>
                  <ComboBox fx:id="startTimePicker" prefWidth="160"/>
                </VBox>

                <VBox spacing="10">
                  <Label text="Giờ kết thúc" styleClass="form-label"/>
                  <ComboBox fx:id="endTimePicker" prefWidth="160"/>
                </VBox>
              </HBox>
            </VBox>

            <HBox spacing="10" alignment="CENTER_RIGHT">
               <Button text="Xóa" minWidth="100" styleClass="button-danger" onAction="#handleDeleteButton"/>
               <Pane HBox.hgrow="ALWAYS" />
               <Button text="Quay lại" minWidth="100" styleClass="button-secondary" onAction="#handleBackButton"/>
               <Button text="Cập Nhật" minWidth="120" styleClass="button-primary" onAction="#handleUpdateShowtimeButton"/>
            </HBox>
          </VBox>
        </HBox>
      </VBox>
    </ScrollPane>
  </center>
</BorderPane>
