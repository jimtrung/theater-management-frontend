<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<ScrollPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.jimtrung.theater.view.ShowtimeInformationController"
            stylesheets="@/styles/styles.css"
            fitToWidth="true">
  <VBox alignment="TOP_CENTER" spacing="30">

    <Label text="Thông Tin Lịch Chiếu" styleClass="title"/>

    <VBox spacing="16" maxWidth="600" styleClass="card">
      <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

      <VBox spacing="5">
        <Label text="Tên phim" styleClass="form-label"/>
        <TextField fx:id="showtimeMovieNameField" editable="false"/>
      </VBox>

      <VBox spacing="5">
        <Label text="Phòng chiếu" styleClass="form-label"/>
        <TextField fx:id="showtimeAuditoriumNameField" editable="false"/>
      </VBox>

      <VBox spacing="5">
        <Label text="Số lượng vé" styleClass="form-label"/>
        <TextField fx:id="showtimeQuantityField" editable="false"/>
      </VBox>

      <VBox spacing="5">
        <Label text="Ngày chiếu" styleClass="form-label"/>
        <TextField fx:id="showtimeDateField" editable="false"/>
      </VBox>

      <HBox spacing="16">
        <VBox spacing="5">
          <Label text="Giờ bắt đầu" styleClass="form-label"/>
          <TextField fx:id="showtimeStartTimeField" editable="false" prefWidth="120"/>
        </VBox>
        <VBox spacing="5">
          <Label text="Giờ kết thúc" styleClass="form-label"/>
          <TextField fx:id="showtimeEndTimeField" editable="false" prefWidth="120"/>
        </VBox>
      </HBox>

      <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button text="Quay lại" styleClass="button-secondary" onAction="#handleBackButton"/>
        <Button text="Xóa" styleClass="button-danger" onAction="#handleDeleteButton"/>
      </HBox>

    </VBox>

  </VBox>
</ScrollPane>
