<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.jimtrung.theater.view.AuditoriumListController"
            stylesheets="@/styles/styles.css">
  <VBox alignment="CENTER" spacing="20" maxWidth="500">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <HBox alignment="CENTER_RIGHT">
      <Button text="Đóng" styleClass="button-secondary" onAction="#handleCloseButton"/>
    </HBox>

    <TableView fx:id="auditoriumTable">
      <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
      <columns>
        <TableColumn fx:id="nameColumn" text="Tên phòng" prefWidth="100"/>
        <TableColumn fx:id="typeColumn" text="Loại phòng" prefWidth="100"/>
        <TableColumn fx:id="capacityColumn" text="Số lượng" prefWidth="100"/>
        <TableColumn fx:id="noteColumn" text="Ghi chú" prefWidth="150"/>
      </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10">

      <Button text="Xóa Tất Cả" styleClass="button-danger" onAction="#handleDeleteAllButton"/>
      <Button text="Thêm Phòng Chiếu" styleClass="button-primary" onAction="#handleAddAuditoriumButton"/>
    </HBox>
  </VBox>
</StackPane>
