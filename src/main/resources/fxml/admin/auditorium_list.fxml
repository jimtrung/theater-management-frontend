<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.jimtrung.theater.view.AuditoriumListController"
            stylesheets="@/styles/styles.css"
            prefWidth="600" prefHeight="500">

  <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

    <HBox alignment="CENTER_RIGHT">
      <Button text="Đóng" onAction="#handleCloseButton"/>
    </HBox>

    <TableView fx:id="auditoriumTable" prefWidth="450">
      <columns>

        <TableColumn fx:id="nameColumn" text="Tên phòng" prefWidth="100"/>
        <TableColumn fx:id="typeColumn" text="Loại phòng" prefWidth="100"/>
        <TableColumn fx:id="capacityColumn" text="Số lượng" prefWidth="100"/>
        <TableColumn fx:id="noteColumn" text="Ghi chú" prefWidth="150"/>

      </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10">
      <Button text="Xóa Tất Cả" onAction="#handleDeleteAllButton"/>
      <Button text="Thêm Phòng Chiếu" onAction="#handleAddAuditoriumButton"/>
    </HBox>

  </VBox>
</AnchorPane>
