<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/8"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.github.jimtrung.theater.view.SignInController"
  stylesheets="@../styles/signin.css"
  styleClass="root">

  <VBox alignment="CENTER" spacing="20" styleClass="main">
    <Label text="Sign In" fx:id="titleLabel" styleClass="title"/>

    <VBox spacing="18" alignment="CENTER" styleClass="card">
      <VBox spacing="6" alignment="CENTER">
        <Label text="Username" styleClass="form-label"/>
        <TextField fx:id="usernameField" styleClass="form-input" prefWidth="340"/>
      </VBox>

      <VBox spacing="6" alignment="CENTER">
        <Label text="Password" styleClass="form-label"/>
        <PasswordField fx:id="passwordField" styleClass="form-input" prefWidth="340"/>
      </VBox>

      <HBox alignment="CENTER" spacing="14" styleClass="button-group">
        <Button text="Back" fx:id="backButton" onAction="#handleBackButton" styleClass="button secondary"/>
        <Button text="Sign In" fx:id="signInButton" onAction="#handleSignInButton" styleClass="button primary"/>
        <Button text="Github" fx:id="githubSignInButton" onAction="#handleGithubSignInButton" styleClass="button primary"/>
      </HBox>
    </VBox>
  </VBox>
</StackPane>
