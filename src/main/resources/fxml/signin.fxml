<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.github.jimtrung.theater.view.SignInController"
           stylesheets="@/styles/styles.css">

  <VBox styleClass="card" alignment="CENTER" spacing="20">
    <padding>
      <Insets top="40" right="48" bottom="40" left="48"/>
    </padding>

    <Label text="Chào Mừng Trở Lại" styleClass="title"/>

    <Label text="Đăng nhập vào tài khoản của bạn" alignment="CENTER">
      <VBox.margin>
        <Insets bottom="12"/>
      </VBox.margin>
    </Label>

    <VBox spacing="6" maxWidth="400">
      <Label text="Tên đăng nhập" styleClass="form-label"/>
      <TextField fx:id="usernameField" promptText=""/>
    </VBox>

    <VBox spacing="6" maxWidth="400">
      <Label text="Mật khẩu" styleClass="form-label"/>
      <StackPane>
        <PasswordField fx:id="passwordField" promptText=""/>
        <TextField fx:id="visiblePasswordField" visible="false" managed="false" promptText=""/>
      </StackPane>
    </VBox>

    <CheckBox fx:id="showPasswordCheckBox" text="Hiển thị mật khẩu" onAction="#TogglePasswordVisibility">
      <VBox.margin>
        <Insets bottom="4"/>
      </VBox.margin>
    </CheckBox>

    <VBox spacing="12" alignment="CENTER">
      <Button fx:id="signInButton"
              text="Đăng Nhập"
              styleClass="button-primary"
              onAction="#handleSignInButton"
              prefWidth="300"/>

      <Button fx:id="backButton"
              text="Quay Lại"
              styleClass="button-secondary"
              onAction="#handleBackButton"
              prefWidth="300"/>
    </VBox>
  </VBox>

</StackPane>
