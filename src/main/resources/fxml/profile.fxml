<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.jimtrung.theater.view.ProfileController"
            stylesheets="@/styles/styles.css"
            fitToWidth="true">

  <VBox alignment="TOP_CENTER" spacing="30">
    <padding>
      <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <VBox spacing="10" alignment="CENTER">
      <Label text="Hồ Sơ Cá Nhân" styleClass="title"/>
      <Label fx:id="roleText" text="Người dùng"/>
    </VBox>

    <!-- Two Column Layout -->
    <GridPane hgap="20" maxWidth="900">
      <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
      </columnConstraints>

      <!-- Account Information Card -->
      <VBox GridPane.columnIndex="0" spacing="20" styleClass="card">
        <padding>
          <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <Label text="Thông Tin Tài Khoản"/>

        <!-- Username -->
        <VBox spacing="6">
          <Label text="Tên Đăng Nhập" styleClass="form-label"/>
          <TextField fx:id="usernameField" editable="false"/>
        </VBox>

        <!-- Email -->
        <VBox spacing="6">
          <Label text="Email" styleClass="form-label"/>
          <TextField fx:id="emailField" editable="false"/>
        </VBox>
      </VBox>

      <!-- Personal Information Card -->
      <VBox GridPane.columnIndex="1" spacing="20" styleClass="card">
        <padding>
          <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <Label text="Thông Tin Cá Nhân"/>

        <!-- Verification Status -->
        <VBox spacing="6">
          <Label text="Trạng Thái Xác Thực" styleClass="form-label"/>
          <HBox alignment="CENTER_LEFT">
            <Label fx:id="verifiedField" text="Đã xác thực"/>
          </HBox>
        </VBox>

        <!-- Created Date -->
        <VBox spacing="6">
          <Label text="Ngày Tạo Tài Khoản" styleClass="form-label"/>
          <TextField fx:id="createdAtField" editable="false"/>
        </VBox>
      </VBox>
    </GridPane>

    <HBox spacing="15" alignment="CENTER">
      <Button fx:id="backButton" text="Quay Lại" styleClass="button-secondary" onAction="#handleBackButton"/>
      <Button fx:id="logOutButton" text="Đăng Xuất" styleClass="button-danger" onAction="#handleLogOutButton"/>
    </HBox>
  </VBox>
</ScrollPane>
