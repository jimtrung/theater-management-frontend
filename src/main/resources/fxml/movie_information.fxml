<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.github.jimtrung.theater.view.MovieInformationController"
            stylesheets="@../styles/add_movie_dialog.css"
            styleClass="root">
    <VBox alignment="CENTER" spacing="20" styleClass="main">
        <Label text="Movie information" fx:id="titleLabel" styleClass="title"/>

        <VBox spacing="18" alignment="CENTER" styleClass="card">
            <VBox spacing="6" alignment="CENTER_LEFT">
                <Label text="Movie name" styleClass="form-label"/>
                <TextField fx:id="movieNameField" styleClass="form-input" prefWidth="340"/>
            </VBox>

            <VBox spacing="6" alignment="CENTER_LEFT">
                <Label text="Movie author" styleClass="form-label"/>
                <TextField fx:id="movieAuthorField" styleClass="form-input" prefWidth="340"/>
            </VBox>

            <VBox spacing="6" alignment="CENTER_LEFT">
                <Label text="Movie genres" styleClass="form-label"/>
                <TextField fx:id="movieGenresField" styleClass="form-input" prefWidth="340"/>
            </VBox>

            <VBox spacing="6" alignment="CENTER_LEFT">
                <Label text="Movie description" styleClass="form-label"/>
                <TextArea fx:id="movieDescriptionField"
                          styleClass="form-input"
                          prefWidth="340"
                          prefHeight="200"
                          wrapText="true" />
            </VBox>

            <HBox spacing="30">
                <VBox spacing="6" alignment="CENTER_LEFT">
                    <Label text="Movie age limit" styleClass="form-label"/>
                    <TextField fx:id="ageLimitField" styleClass="form-input" maxWidth="50"/>
                </VBox>

                <VBox spacing="6" alignment="CENTER_LEFT">
                    <Label text="Movie duration" styleClass="form-label"/>
                    <TextField fx:id="movieDurationField" styleClass="form-input" maxWidth="50"/>
                </VBox>

            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="14" styleClass="button-group">
                <Button text="Back" fx:id="backButton" styleClass="button secondary" onAction="#handleBackButton"/>
                <Button text="Edit" fx:id="editButton" styleClass="button primary" onAction="#handleEditButton"/>
                <Button text="Delete" fx:id="deleteButton" styleClass="button primary" onAction="#handleDeleteButton"/>
            </HBox>
        </VBox>
    </VBox>

</StackPane>
