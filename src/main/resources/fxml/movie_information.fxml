<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.github.jimtrung.theater.view.MovieInformationController"
           stylesheets="@../styles/add_movie_dialog.css"
           styleClass="root">

  <VBox alignment="CENTER" spacing="20" styleClass="main">

    <Label text="ðŸŽ¬ Movie Information" fx:id="titleLabel" styleClass="title"/>

    <VBox spacing="18" alignment="CENTER" styleClass="card">

      <!-- Movie name -->
      <VBox spacing="6" alignment="CENTER_LEFT">
        <Label text="Movie Name" styleClass="form-label"/>
        <TextField fx:id="movieNameField" styleClass="form-input" prefWidth="340"/>
      </VBox>

      <!-- Description -->
      <VBox spacing="6" alignment="CENTER_LEFT">
        <Label text="Description" styleClass="form-label"/>
        <TextArea fx:id="movieDescriptionField"
                  styleClass="form-input"
                  prefWidth="340"
                  prefHeight="150"
                  wrapText="true"/>
      </VBox>

      <!-- Director -->
      <VBox spacing="6" alignment="CENTER_LEFT">
        <Label text="Director ID" styleClass="form-label"/>
        <TextField fx:id="directorIdField" styleClass="form-input" prefWidth="340"/>
      </VBox>

      <!-- Genres -->
      <VBox spacing="6" alignment="CENTER_LEFT">
        <Label text="Genres (comma-separated)" styleClass="form-label"/>
        <TextField fx:id="genresField" styleClass="form-input" prefWidth="340"/>
      </VBox>

      <!-- Premiere -->
      <VBox spacing="6" alignment="CENTER_LEFT">
        <Label text="Premiere (YYYY-MM-DD HH:mm:ss)" styleClass="form-label"/>
        <TextField fx:id="premiereField" styleClass="form-input" prefWidth="340"/>
      </VBox>

      <!-- Duration & Rated -->
      <HBox spacing="30" alignment="CENTER_LEFT">
        <VBox spacing="6" alignment="CENTER_LEFT">
          <Label text="Duration (min)" styleClass="form-label"/>
          <TextField fx:id="durationField" styleClass="form-input" maxWidth="80"/>
        </VBox>

        <VBox spacing="6" alignment="CENTER_LEFT">
          <Label text="Rated (age)" styleClass="form-label"/>
          <TextField fx:id="ratedField" styleClass="form-input" maxWidth="80"/>
        </VBox>
      </HBox>

      <!-- Language -->
      <VBox spacing="6" alignment="CENTER_LEFT">
        <Label text="Language" styleClass="form-label"/>
        <TextField fx:id="languageField" styleClass="form-input" prefWidth="200"/>
      </VBox>

      <!-- Buttons -->
      <HBox alignment="CENTER_RIGHT" spacing="14" styleClass="button-group">
        <Button text="Back" fx:id="backButton" styleClass="button secondary" onAction="#handleBackButton"/>
        <Button text="Edit" fx:id="editButton" styleClass="button primary" onAction="#handleEditButton"/>
        <Button text="Delete" fx:id="deleteButton" styleClass="button danger" onAction="#handleDeleteButton"/>
      </HBox>

    </VBox>
  </VBox>

</StackPane>
