<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.jimtrung.theater.view.ShowtimePageController"
            stylesheets="@/styles/styles.css">
  <top>
    <fx:include fx:id="userHeader" source="../component/header.fxml"/>
  </top>

  <center>
    <ScrollPane fitToWidth="true">
      <VBox spacing="0">
        <VBox spacing="30">
          <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
          </padding>

          <!-- Movie Info Section -->
          <HBox spacing="30" alignment="CENTER_LEFT" styleClass="card-modern">
             <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
             <ImageView fx:id="moviePoster" fitWidth="220" fitHeight="330" preserveRatio="true" styleClass="poster"/>
             <VBox spacing="15" HBox.hgrow="ALWAYS">
                <Label fx:id="movieTitle" text="Movie Title" styleClass="title" wrapText="true"/>
                <HBox spacing="15">
                   <Label fx:id="movieDuration" text="Duration" styleClass="badge"/>
                   <Label fx:id="movieRated" text="Rated" styleClass="badge"/>
                </HBox>
                <Label fx:id="movieGenre" text="Genre" style="-fx-text-fill: #aaaaaa; -fx-font-size: 14px;"/>
                <Label fx:id="movieDescription" text="Description..." wrapText="true" style="-fx-text-fill: white; -fx-font-size: 14px;" VBox.vgrow="ALWAYS"/>
                <Label fx:id="movieDirector" text="Director: " style="-fx-text-fill: #cccccc;"/>
                <Label fx:id="movieActors" text="Actors: " style="-fx-text-fill: #cccccc;" wrapText="true"/>
             </VBox>
          </HBox>

          <HBox alignment="CENTER_LEFT">
            <Label text="Lịch Chiếu" styleClass="title"/>
          </HBox>

          <FlowPane fx:id="showtimeList" hgap="20" vgap="20" alignment="CENTER_LEFT"/>
        </VBox>
      </VBox>
    </ScrollPane>
  </center>
</BorderPane>
